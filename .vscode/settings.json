{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.json, tsconfig.app.json, tsconfig.spec.json, tsconfig.build.json, tsconfig.node.json",
    ".eslintrc.js": ".eslintrc.js, .eslintignore, .prettierrc, .prettierignore",
    ".eslintrc.cjs": ".eslintrc.cjs, .eslintignore, .prettierrc, .prettierignore",
    "package.json": "package.json, pnpm-lock.yaml, pnpm-workspace.yaml, .gitattributes, .gitignore",
    "jest.config.ts": "jest.config.ts, setup-jest.ts, jest.setup.ts",
    "tailwind.config.js": "tailwind.config.js, postcss.config.js",
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[postgres]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editorconfig.generateAuto": false,
  "editorconfig.template": "default",
  "jest.autoRun": {
    "onSave": false,
    "onType": false
  },
  "jest.jestCommandLine": "npm run test -w api -w client --",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[codeowners]": {
    "editor.defaultFormatter": "jasonnutter.vscode-codeowners"
  }
}
